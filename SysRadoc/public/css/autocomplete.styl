/* AUTOCOMPLETE */

.autocomplete
    width 100%
    position relative


.autocomplete input
    font-size 1.2em
    width 100%
    padding 0.4em


.autocomplete ul
    position absolute
    left 0
    width 100%
    border-left 1px solid #888
    border-right 1px solid #888
    border-bottom 1px solid #888
    z-index 1
    list-style-type none


.autocomplete li
    text-align left
    list-stylenone
    width 100%
    padding0.4em
    background-color #fff


.autocomplete li.active
    width 100%
    background-color #4bf



.autocomplete .highlight
    background-color #E2E2E2


.autocomplete li.active .highlight
    background #666
    color #fff
